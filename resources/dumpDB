create database if not exists `library`;
use `library`;


drop table if exists `users`;

create table `users` (
				id int(5) not null auto_increment primary key, 
				name varchar(255),
				passport(255),
				phone varchar(255),
				email varchar(255), 
				role varchar(255), 
				login varchar(255), 
				password varchar(255), 
				status varchar(255));
                
                
                
drop table if exists `books`;

create table `books` (
				id int(5) not null auto_increment primary key, 
				title varchar(255), 				
				author varchar(255), 
				description varchar(255), 
				status varchar(255), 
				user_id int(5));
                
                
                
drop table if exists `library_cards`;

create table `library_cards` (
				user_id int(5), 
				book_id int(5));