create database if not exists `library`;
use `library`;


drop table if exists `users`;

create table `users` (
				id int(5), 
				name varchar(255), 
				role int(1), 
				login varchar(255), 
				password varchar(255), 
				status int(1), 
				library_card int(5));
                
                
                
drop table if exists `books`;

create table `books` (
				id int(5), 
				title varchar(255), 				
				author varchar(255), 
				description varchar(255), 
				status int(1), 
				user_id int(5));
                
                
                
drop table if exists `library_cards`;

create table `library_cards` (
				user_id int(5), 
				book_id int(5));